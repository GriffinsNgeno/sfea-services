{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,700|Roboto:300,400,700" rel="stylesheet"/>
    <style>
        body {
            margin: 0;
            padding: 0;
        }

        .menu-content > div:first-child {
            padding: 20px 20px 30px;
        }
    </style>
{% endblock %}

{% block root %}
    <redoc
            expand-responses="all"
            expand-single-schema-field
            json-sample-expand-level="all"
            required-props-first
            sort-props-alphabetically
            sort-enum-values-alphabetically
            sort-operations-alphabetically
            sort-tags-alphabetically
            spec-url="{{ path('app.swagger') }}"
    ></redoc>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script defer src="https://cdn.jsdelivr.net/npm/redoc@next/bundles/redoc.standalone.js"></script>
{% endblock %}
